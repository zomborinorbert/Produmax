<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.PlannerFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="348dp"
        android:layout_height="555dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <Button
        android:id="@+id/btn_navigate_to_invites"
        android:layout_width="235dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/silver_pink"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Invitations"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_navigate_to_create_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_navigate_to_create_event" />

    <Button
        android:id="@+id/btn_navigate_to_create_event"
        android:layout_width="235dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/silver_pink"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Create new event"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_navigate_to_invites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_navigate_to_create_flag"
        android:layout_width="235dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/silver_pink"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Create new flag"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_navigate_to_invites" />

</androidx.constraintlayout.widget.ConstraintLayout>