<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <TextView
        android:id="@+id/tv_welcome_text"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:text="Welcome Username!"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_planner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583" />

    <Button
        android:id="@+id/btn_planner"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:text="Plan your day"
        app:layout_constraintBottom_toTopOf="@+id/btn_todos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_todos"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:text="To do's"
        app:layout_constraintBottom_toTopOf="@+id/btn_tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_planner" />

    <Button
        android:id="@+id/btn_tracker"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:text="Habit tracker"
        app:layout_constraintBottom_toTopOf="@+id/btn_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_todos" />

    <Button
        android:id="@+id/btn_friends"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tracker" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:text="S"
        app:layout_constraintBottom_toTopOf="@+id/btn_planner"
        app:layout_constraintEnd_toStartOf="@+id/btn_logout"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:text="L"
        app:layout_constraintBottom_toTopOf="@+id/btn_planner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />


</androidx.constraintlayout.widget.ConstraintLayout>