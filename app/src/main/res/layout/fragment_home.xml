<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <TextView
        android:id="@+id/tv_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="Welcome Username!"
        android:textSize="37sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_planner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_planner"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:backgroundTint="@color/vivid_blue"
        android:scaleType="fitCenter"
        android:text="Plan your day"
        app:layout_constraintBottom_toTopOf="@+id/btn_todos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_todos"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:backgroundTint="@color/vivid_blue"
        android:scaleType="fitCenter"
        android:text="To do"
        app:layout_constraintBottom_toTopOf="@+id/btn_tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_planner" />

    <Button
        android:id="@+id/btn_tracker"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:backgroundTint="@color/vivid_blue"
        android:text="Habit tracker"
        app:layout_constraintBottom_toTopOf="@+id/btn_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_todos" />

    <Button
        android:id="@+id/btn_friends"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:backgroundTint="@color/vivid_blue"
        android:text="Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tracker" />


</androidx.constraintlayout.widget.ConstraintLayout>