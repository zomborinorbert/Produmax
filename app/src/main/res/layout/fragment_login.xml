<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pic_inverted"
    android:gravity="center"
    tools:context=".ui.LoginFragment">


    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="367dp"
        android:layout_height="46dp"
        android:background="@drawable/edit_text_border"
        android:paddingStart="15dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorLink="@color/champagne_pink"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="367dp"
        android:layout_height="46dp"
        android:background="@drawable/edit_text_border"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColorHighlight="@color/champagne_pink"
        android:textColorLink="@color/champagne_pink"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_login_email"
        app:layout_constraintVertical_bias="0.032" />

    <Button
        android:id="@+id/btn_login_confirm"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/vivid_blue"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="Login"
        android:textColor="@color/linen"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_login_password"
        app:layout_constraintVertical_bias="0.037" />

</androidx.constraintlayout.widget.ConstraintLayout>