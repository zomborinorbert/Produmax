<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Produmax" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/blue_green</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="colorControlActivated">@color/han_blue</item>
        <item name="colorControlHighlight">@color/han_blue</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">#30000000</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blue_crayola</item>
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
    </style>
</resources>